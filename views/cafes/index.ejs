<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCafe!</h1>
            <p>View our hand-picked cafes from all over the world!</p>
            <p>
                <a class="btn btn-primary" href="/cafes/new">Add Your Own Cafe!</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% cafes.forEach(function(cafe){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= cafe.image %>">
                    <div class="caption">
                        <h4>
                            <%= cafe.name %>
                        </h4>
                    </div>
                    <p>
                        <a href="/cafes/<%= cafe._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>



<% include ../partials/footer %>